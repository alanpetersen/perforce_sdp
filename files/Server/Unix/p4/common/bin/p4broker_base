#
# Perforce broker base init script

# do nothing unless $SDP_INSTANCE is defined.
if [[ -z $SDP_INSTANCE ]]; then
   echo $SDP_INSTANCE
   echo "SDP_INSTANCE is invalid."
   exit 1
fi

if [[ `$ID -u` = 0 ]]; then
  exec su - $OSUSER -c "$0 $1"
elif [[ "`$ID -u -n`" != $OSUSER ]]; then
  echo "$0 can only be run by root or $OSUSER"
  exit 1
fi

# Souce in get_pids().
source $P4CBIN/ps_functions.sh || exit 1

case "$1" in
   start)
      echo "Starting ${P4BROKERBIN} using ${P4BROKERCFG}."
      ${P4BROKERBIN} -d -c ${P4BROKERCFG}
   ;;

   status)
      p4broker_pids=$(get_pids "$P4BROKERCFG")
      if [[ -n "$p4broker_pids" ]]; then
         echo "${P4BROKERBIN} is running as pids: $p4broker_pids."
         exit 0
      else
         echo "${P4BROKERBIN} is NOT running."
         exit 1
      fi
   ;;

   stop)
      p4broker_pids=$(get_pids "$P4BROKERCFG")

      if [[ -n "$p4broker_pids" ]]; then
         while [[ -n "$p4broker_pids" ]]; do
            echo "Shutting down ${P4BROKERBIN} pids $p4broker_pids."
            kill $p4broker_pids 2>&1 | $GREP -v -i "No such"
            sleep 1
            p4broker_pids=$(get_pids "$P4BROKERCFG")
         done
         echo "${P4BROKERBIN} stopped."
         exit 0
      else
         echo "${P4BROKERBIN} was NOT running."
         exit 1
      fi
   ;;
   restart)
      $0 stop
      $0 start
   ;;
   *)
      echo "Usage: $0 {start|stop|status|restart}"
      exit 1
   ;;
esac
